# Puerto del servidor
PORT=5000

# Base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=liceo_tecpan
DB_USER=postgres
DB_PASSWORD=tu_contraseña_aqui

# JWT Secret (genera uno seguro en producción)
# Puedes generar uno con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=tu_jwt_secret_seguro_aqui
JWT_EXPIRES_IN=7d

# Entorno
NODE_ENV=development

# Google OAuth
# Obtén tus credenciales en: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=tu_google_client_id_aqui
GOOGLE_CLIENT_SECRET=tu_google_client_secret_aqui
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Dominios permitidos (separados por coma)
ALLOWED_DOMAINS=liceotecpan.edu.gt,liceotecpan.com
